<UserControl x:Class="WpfApp1.Pages.TaskUsers.CartsForTask.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="100" Width="280">

    <Border Background="White" 
            CornerRadius="8" 
            BorderThickness="1" 
            BorderBrush="#E0E0E0"
            Margin="4"
            Padding="10">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1">
                <TextBlock Text="{Binding Title}"
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           TextTrimming="CharacterEllipsis"/>

                <TextBlock Text="{Binding PieceNumber, StringFormat=Элементов: {0}}"
                           Margin="0,4,0,0"
                           FontSize="11"
                           Foreground="#757575"/>

                <TextBlock Text="{Binding CompletedPieces, StringFormat=Выполнено: {0}}"
                           FontSize="11"
                           Foreground="#4CAF50"/>
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <CheckBox x:Name="CompleteCheckBox"
                          IsChecked="{Binding IsCompleted}"
                          VerticalAlignment="Center"
                          ToolTip="Задача выполнена"
                          Margin="0,0,0,8">
                    <CheckBox.Content>
                        <TextBlock Text="✓" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"/>
                    </CheckBox.Content>
                </CheckBox>
                <Button Content="..."
                        Width="24"
                        Height="24"
                        Padding="0"
                        FontSize="10"
                        ToolTip="Подробнее"
                        Click="DetailsButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>