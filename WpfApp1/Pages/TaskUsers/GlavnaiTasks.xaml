<Page x:Class="WpfApp1.Pages.TaskUsers.GlavnaiTasks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.TaskUsers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Мои задачи"
      Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#2C3E50" 
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Мои задачи" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <Button 
                        x:Name="CreateTaskButton"
                        Content="Создать задачу" 
                        Padding="15,8"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"
                        Click="CreateTaskButton_Click" Grid.ColumnSpan="2" Margin="640,0,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TasksItemsControl" 
                          Margin="15">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1"
                                CornerRadius="5"
                                Margin="0,0,0,10"
                                Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,5"/>

                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="14"
                                               Foreground="#666666"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#ECF0F1" 
                                                CornerRadius="3"
                                                Padding="5,2">
                                            <TextBlock Text="{Binding PuzzleId, StringFormat='Пазл: {0}'}" 
                                                       FontSize="12"
                                                       Foreground="#7F8C8D"/>
                                        </Border>

                                        <Border Background="#ECF0F1" 
                                                CornerRadius="3"
                                                Padding="5,2"
                                                Margin="10,0,0,0">
                                            <TextBlock Text="{Binding PieceNumber, StringFormat='Кусочек: {0}'}" 
                                                       FontSize="12"
                                                       Foreground="#7F8C8D"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center">
                                    <Border Background="{Binding IsActive, Converter={StaticResource StatusToColorConverter}}" 
                                            CornerRadius="12"
                                            Padding="8,4"
                                            Width="80">
                                        <TextBlock Text="{Binding IsActive, Converter={StaticResource BooleanToStatusConverter}}" 
                                                   HorizontalAlignment="Center"
                                                   Foreground="White"
                                                   FontWeight="Bold"/>
                                    </Border>

                                    <Button Content="Выполнить" 
                                            Margin="0,10,0,0"
                                            Padding="10,5"
                                            Background="#27AE60"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="Bold"
                                            Cursor="Hand"
                                            Tag="{Binding Id}"
                                            Click="ExecuteTaskButton_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="3">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1,0,0,0"
                Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Всего задач: " 
                           FontSize="14"
                           Foreground="#666666"/>
                <TextBlock x:Name="TotalTasksCount" 
                           Text="0" 
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="5,0,20,0"/>

                <TextBlock Text="Активных: " 
                           FontSize="14"
                           Foreground="#666666"/>
                <TextBlock x:Name="ActiveTasksCount" 
                           Text="0" 
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#27AE60"
                           Margin="5,0,20,0"/>

                <TextBlock Text="Неактивных: " 
                           FontSize="14"
                           Foreground="#666666"/>
                <TextBlock x:Name="InactiveTasksCount" 
                           Text="0" 
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#E74C3C"
                           Margin="5,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>