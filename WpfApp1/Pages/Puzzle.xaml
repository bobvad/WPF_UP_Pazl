<Page x:Class="WpfApp1.Pages.Puzzle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:WpfApp1.Pages"
      Title="Мой пазл"
      Background="#F5F5F5">

    <Page.Resources>
        <Style x:Key="PuzzlePieceStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="MainBorder" Property="Background" Value="#EEEEEE"/>
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#AAAAAA"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="15"
                CornerRadius="0,0,10,10">
            <StackPanel>
                <TextBlock Text="Сборка пазла" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="PuzzleTitle" 
                           Text="Загрузка..." 
                           Foreground="White" 
                           FontSize="16"
                           Margin="0,4,0,0"/>
                <TextBlock x:Name="ProgressText" 
                           Text="Прогресс: 0/4" 
                           Foreground="White" 
                           FontSize="14"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10"
                    Padding="20"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid Width="220" Height="220">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="PuzzlePiece1" Grid.Row="0" Grid.Column="0" Style="{StaticResource PuzzlePieceStyle}" Background="#2196F3" Content="1" Tag="0" IsEnabled="False" Margin="2"/>
                    <Button x:Name="PuzzlePiece2" Grid.Row="0" Grid.Column="1" Style="{StaticResource PuzzlePieceStyle}" Background="#4CAF50" Content="2" Tag="1" IsEnabled="False" Margin="2"/>
                    <Button x:Name="PuzzlePiece3" Grid.Row="1" Grid.Column="0" Style="{StaticResource PuzzlePieceStyle}" Background="#FF9800" Content="3" Tag="2" IsEnabled="False" Margin="2"/>
                    <Button x:Name="PuzzlePiece4" Grid.Row="1" Grid.Column="1" Style="{StaticResource PuzzlePieceStyle}" Background="#F44336" Content="4" Tag="3" IsEnabled="False" Margin="2"/>
                </Grid>
            </Border>

            <Border Grid.Column="1" 
                    Margin="20,0,0,0" 
                    Background="White"
                    CornerRadius="10"
                    Padding="20"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Информация" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="0,0,0,12"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Статус: " FontWeight="SemiBold"/>
                        <TextBlock x:Name="StatusText" Text="Не начат" Foreground="#666666"/>
                    </StackPanel>

                    <ProgressBar x:Name="PuzzleProgressBar" 
                                 Height="8" 
                                 Margin="0,0,0,12"
                                 Maximum="4"
                                 Foreground="#4CAF50"/>

                    <TextBlock x:Name="PiecesText" 
                               Text="Открыто кусочков: 0 из 4"
                               Margin="0,0,0,16"/>

                    <Button x:Name="BtnCompleteTask"
                            Content="Выполнить задачу"
                            Height="36"
                            Background="#2196F3"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnCompleteTask_Click"
                            Margin="0,0,0,10"/>

                    <Button x:Name="BtnViewTasks"
                            Content="Мои задачи"
                            Height="37"
                            Background="#607D8B"
                            Foreground="White"
                            FontSize="13"
                            Margin="0,5,0,5"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnViewTasks_Click"/>

                    <Button x:Name="BtnViewGallery"
                            Content="Моя галерея"
                            Height="39"
                            Background="#9C27B0"
                            Foreground="White"
                            FontSize="13"
                            Margin="0,5,0,5"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnViewGallery_Click"/>

                    <Border x:Name="CompletionMessage"
                            Background="#E8F5E9"
                            BorderBrush="#4CAF50"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,16,0,0"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Пазл собран!" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="#2E7D32"/>
                            <TextBlock Text="Этот пазл добавлен в вашу галерею."
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"
                                       Foreground="#444444"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" 
                Background="#F0F0F0" 
                Padding="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1,1,0,0">
            <Button Content="Обновить прогресс" 
                    Click="BtnRefresh_Click"
                    Style="{StaticResource PuzzlePieceStyle}"
                    Background="#607D8B"
                    FontSize="13"
                    Width="200"
                    Height="NaN"
                    HorizontalAlignment="Center" Margin="0,-5,0,-5"/>
        </Border>
    </Grid>
</Page>