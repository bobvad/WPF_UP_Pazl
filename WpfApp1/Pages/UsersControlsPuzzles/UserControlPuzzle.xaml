<UserControl x:Class="WpfApp1.Pages.UsersControlsPuzzles.UserControlPuzzle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Pages.UsersControlsPuzzles"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200"
             x:Name="PuzzlePieceControl">

    <Grid>
        <Border x:Name="MainBorder" CornerRadius="10" >
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="8" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <!-- Задний фон для закрытого кусочка -->
                <Rectangle x:Name="ClosedBackground" Fill="#FF3A3A3A" Opacity="0.9" RadiusX="8" RadiusY="8">
                    <Rectangle.Style>
                        <Style TargetType="Rectangle">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsUnlocked, ElementName=PuzzlePieceControl}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                 To="0" Duration="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>

                <TextBlock x:Name="PieceNumberText"
                           Foreground="White" FontSize="20" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Opacity="0.8">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsUnlocked, ElementName=PuzzlePieceControl}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Изображение кусочка (показывается когда открыт) -->
                <Grid x:Name="ImageContainer" Opacity="0" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <ScaleTransform ScaleX="0.3" ScaleY="0.3"/>
                    </Grid.RenderTransform>

                    <Grid.Clip>
                        <RectangleGeometry Rect="0,0,1,1" RadiusX="8" RadiusY="8"/>
                    </Grid.Clip>

                    <Image x:Name="PieceImage"
                           Stretch="UniformToFill"/>

                    <Border Background="#40000000" CornerRadius="8"/>
                </Grid>

                <Border x:Name="GlowEffect" Background="#60FFFFFF" CornerRadius="8" Opacity="0">
                    <Border.Effect>
                        <BlurEffect Radius="20"/>
                    </Border.Effect>
                </Border>
            </Grid>
        </Border>

        <Border x:Name="HoverEffect" Background="Transparent" CornerRadius="10" Opacity="0">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0.3" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
    </Grid>
</UserControl>