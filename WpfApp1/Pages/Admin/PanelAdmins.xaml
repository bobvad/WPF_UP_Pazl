<Page x:Class="WpfApp1.Pages.Admin.PanelAdmins"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="750"
      Title="Добавление пазла"
      Background="#F8F9FA">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20" Width="710">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="16" Margin="0,0,0,16"
                    BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Добавить новый пазл" FontSize="22" FontWeight="SemiBold"
                               Foreground="#2D3748" Margin="0,0,0,4"/>
                    <TextBlock Text="Заполните все поля для добавления нового пазла в каталог"
                               FontSize="13" Foreground="#718096"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="16" Margin="0,0,0,12"
                    BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Название пазла" FontSize="15" FontWeight="Medium" Foreground="#2D3748"/>
                        <TextBlock Text="*" FontSize="15" FontWeight="Medium" Foreground="#E53E3E" Margin="2,0,0,0"/>
                    </StackPanel>
                    <TextBox x:Name="TxtName" Padding="12,10" FontSize="13" BorderBrush="#CBD5E0"
                             BorderThickness="1.5" Background="#F7FAFC" GotFocus="TxtName_GotFocus" LostFocus="TxtName_LostFocus">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="#2D3748"/>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#4299E1"/>
                                        <Setter Property="Background" Value="#FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Background="White" CornerRadius="6" Padding="16" Margin="0,0,0,12"
                    BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Изображение пазла" FontSize="15" FontWeight="Medium" Foreground="#2D3748"/>
                        <TextBlock Text="*" FontSize="15" FontWeight="Medium" Foreground="#E53E3E" Margin="2,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Укажите URL" FontSize="12" Foreground="#718096" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="TxtImageUrl" Width="400" Padding="12,10" FontSize="13"
                                 BorderBrush="#CBD5E0" BorderThickness="1.5" Background="#F7FAFC"
                                 TextChanged="TxtImageUrl_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#2D3748"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#4299E1"/>
                                            <Setter Property="Background" Value="#FFFFFF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button x:Name="BtnBrowseImage" Content="Выбрать..." Margin="10,0,0,0"
                                Click="BtnBrowseImage_Click" Padding="14,8" Background="#4299E1"
                                Foreground="White" FontSize="13" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#4299E1"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3182CE"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#2C5282"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="3" Background="White" CornerRadius="6" Padding="16" Margin="0,0,0,12"
                    BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Предпросмотр" FontSize="15" FontWeight="Medium" Foreground="#2D3748" Margin="0,0,0,10"/>
                    <Border Height="140" BorderBrush="#E2E8F0" BorderThickness="1" Background="#F7FAFC" CornerRadius="4">
                        <Grid>
                            <Image x:Name="ImgPreview" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   MaxWidth="350" MaxHeight="120"/>
                            <TextBlock x:Name="PreviewPlaceholder" Foreground="#A0AEC0" FontSize="13"
                                       FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Row="5" Background="White" CornerRadius="6" Padding="16" Margin="0,0,0,12"
                    BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <Button x:Name="BtnAdd" Content="Добавить пазл" Click="BtnAdd_Click" Width="200" Height="42"
                            FontSize="15" FontWeight="SemiBold" Background="#48BB78" Foreground="White"
                            BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#48BB78"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#38A169"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#2F855A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="* — обязательные поля" FontSize="12" Foreground="#718096" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="6" Background="White" CornerRadius="6" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Статус" FontSize="15" FontWeight="Medium" Foreground="#2D3748" Margin="0,0,0,6"/>
                    <Border x:Name="StatusBorder" CornerRadius="4" Padding="14,10" Background="#F0FFF4"
                            BorderBrush="#C6F6D5" BorderThickness="1">
                        <TextBlock x:Name="StatusText" Text="Готов к добавлению" Foreground="#276749"
                                   FontSize="13" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Row="7" Height="20" Background="Transparent"/>
        </Grid>
    </ScrollViewer>
</Page>