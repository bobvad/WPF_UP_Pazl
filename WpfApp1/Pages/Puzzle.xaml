<Page x:Class="WpfApp1.Pages.Puzzle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:WpfApp1.Pages"
      Title="Мой пазл"
      Background="#FFF5F5F5">

    <Page.Resources>
        <Style x:Key="PuzzlePieceStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="ClosedBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="#FF333333"
                                    BorderThickness="2"
                                    CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="3" 
                                                      Opacity="0.5" 
                                                      BlurRadius="8"/>
                                </Border.Effect>
                            </Border>

                            <ContentPresenter x:Name="contentPresenter"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>

                            <Border x:Name="DisabledOverlay" 
                                    Background="#AA000000" 
                                    CornerRadius="12"
                                    Opacity="0">
                                <Border.Effect>
                                    <BlurEffect Radius="2"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="DisabledOverlay" Property="Opacity" Value="0.7"/>
                                <Setter TargetName="ClosedBorder" Property="BorderBrush" Value="#FF666666"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ClosedBorder"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.9" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>


    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#FF2196F3" 
                Padding="15"
                CornerRadius="0,0,20,20">
            <StackPanel>
                <TextBlock Text="Сборка пазла" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="PuzzleTitle" 
                           Text="Загрузка..." 
                           Foreground="White" 
                           FontSize="18"
                           Margin="0,5,0,0"/>
                <TextBlock x:Name="ProgressText" 
                           Text="Прогресс: 0/4" 
                           Foreground="White" 
                           FontSize="16"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="20"
                    Padding="20"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="2">
                <Grid>
                    <Image x:Name="FullImage" 
                           Stretch="Uniform"
                           Opacity="0.15"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    <Grid Width="300" Height="300" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="PuzzlePiece1"
                                Grid.Row="0" Grid.Column="0"
                                Style="{StaticResource PuzzlePieceStyle}"
                                Background="#FF2196F3"
                                Content="1"
                                Tag="0"
                                Margin="10"
                                IsEnabled="False"
                                RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                            </Button.RenderTransform>
                        </Button>

                        <Button x:Name="PuzzlePiece2"
                                Grid.Row="0" Grid.Column="1"
                                Style="{StaticResource PuzzlePieceStyle}"
                                Background="#FF4CAF50"
                                Content="2"
                                Tag="1"
                                Margin="10"
                                IsEnabled="False"
                                RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                            </Button.RenderTransform>
                        </Button>

                        <Button x:Name="PuzzlePiece3"
                                Grid.Row="1" Grid.Column="0"
                                Style="{StaticResource PuzzlePieceStyle}"
                                Background="#FFFF9800"
                                Content="3"
                                Tag="2"
                                Margin="10"
                                IsEnabled="False"
                                RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                            </Button.RenderTransform>
                        </Button>

                        <Button x:Name="PuzzlePiece4"
                                Grid.Row="1" Grid.Column="1"
                                Style="{StaticResource PuzzlePieceStyle}"
                                Background="#FFF44336"
                                Content="4"
                                Tag="3"
                                Margin="10"
                                IsEnabled="False"
                                RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                            </Button.RenderTransform>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="1" 
                    Margin="20,0,0,0" 
                    Background="White"
                    CornerRadius="15"
                    Padding="20"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="2"
                    Width="300">
                <StackPanel>
                    <TextBlock Text="📋 Информация" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Статус: " 
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="StatusText" 
                                   Text="Не начат" 
                                   Foreground="#FF666666"/>
                    </StackPanel>

                    <ProgressBar x:Name="PuzzleProgressBar" 
                                 Height="10" 
                                 Margin="0,0,0,15"
                                 Maximum="4"
                                 Foreground="#FF4CAF50"/>

                    <TextBlock x:Name="PiecesText" 
                               Text="Открыто кусочков: 0 из 4"
                               Margin="0,0,0,20"/>

                    <Button x:Name="BtnCompleteTask"
                            Content="Выполнить задачу"
                            Height="45"
                            Background="#FF2196F3"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnCompleteTask_Click">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" 
                                              Opacity="0.3" 
                                              BlurRadius="5"/>
                        </Button.Effect>
                    </Button>

                    <Button x:Name="BtnViewTasks"
                            Content=" Мои задачи"
                            Height="40"
                            Background="#FF607D8B"
                            Foreground="White"
                            FontSize="14"
                            Margin="0,10,0,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnViewTasks_Click"/>

                    <Button x:Name="BtnViewGallery"
                            Content="Моя галерея"
                            Height="40"
                            Background="#FF9C27B0"
                            Foreground="White"
                            FontSize="14"
                            Margin="0,10,0,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnViewGallery_Click"/>

                    <Border x:Name="CompletionMessage"
                            Background="#FFE8F5E9"
                            BorderBrush="#FF4CAF50"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0,20,0,0"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Пазл собран!" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#FF2E7D32"/>
                            <TextBlock Text="Этот пазл добавлен в вашу галерею."
                                       Margin="0,5,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" 
                Background="#FFF0F0F0" 
                Padding="15"
                BorderBrush="#FFE0E0E0"
                BorderThickness="1,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content=" Обновить прогресс" 
                        Click="BtnRefresh_Click"
                        Style="{StaticResource PuzzlePieceStyle}"
                        Background="#FF607D8B"
                        FontSize="14"
                        Width="247"
                        Height="40"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>