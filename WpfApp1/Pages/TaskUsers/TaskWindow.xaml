<Window x:Class="WpfApp1.Pages.TaskUsers.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Pages.TaskUsers"
        mc:Ignorable="d"
        Title="Создание задачи" 
        Height="557" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border CornerRadius="12" 
            Background="White" 
            BorderThickness="1" 
            BorderBrush="#E0E0E0"
            Margin="20">

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Создание задачи" 
                           FontSize="22" 
                           FontWeight="Bold"
                           Foreground="#333333"/>
                <TextBlock Text="Заполните информацию о новой задаче" 
                           FontSize="13" 
                           Foreground="#666666"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Название задачи:" 
                               FontWeight="SemiBold"
                               Foreground="#555555"
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    <Border CornerRadius="8" 
                            Background="#F8F9FA" 
                            BorderThickness="1" 
                            BorderBrush="#E0E0E0"
                            Padding="2">
                        <TextBox x:Name="TitleTextBox" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Height="40"
                                 MaxLength="100"
                                 TextWrapping="Wrap"
                                 VerticalContentAlignment="Center"
                                 Padding="15"
                                 FontSize="14"
                                 Foreground="#333333"/>
                    </Border>
                    <TextBlock Text="Максимум 100 символов" 
                               FontSize="11" 
                               Foreground="#888888"
                               Margin="5,5,0,0"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Описание задачи:" 
                               FontWeight="SemiBold"
                               Foreground="#555555"
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    <Border CornerRadius="8" 
                            Background="#F8F9FA" 
                            BorderThickness="1" 
                            BorderBrush="#E0E0E0"
                            Padding="2"
                            Height="130">
                        <TextBox x:Name="DescriptionTextBox" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MaxLength="500"
                                 Padding="15"
                                 FontSize="14"
                                 Foreground="#333333"/>
                    </Border>
                    <TextBlock Text="Максимум 500 символов" 
                               FontSize="11" 
                               Foreground="#888888"
                               Margin="5,5,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,30,0,0">
                <Button x:Name="CancelButton" 
                        Content="Отмена" 
                        Width="120" 
                        Height="45"
                        Margin="0,0,15,0"
                        Click="CancelButton_Click"
                        Background="Transparent"
                        BorderBrush="#D0D0D0"
                        BorderThickness="1"
                        Foreground="#666666"
                        FontWeight="SemiBold"
                        FontSize="14"/>

                <Button x:Name="SaveButton" 
                        Content="Сохранить" 
                        Width="120"
                        Height="45"
                        Click="SaveButton_Click"
                        Background="#4A90E2"
                        BorderThickness="0"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>